rules_version = '2';

// Firebase Storage Security Rules for Catfished Game
// These rules ensure players can only upload their own drawings
// but anyone authenticated can view drawings (for the game to work)

service firebase.storage {
  match /b/{bucket}/o {
    
    // Rules for player drawings (now using .jpg format)
    match /drawings/{roomCode}/{playerName}.jpg {
      // Allow authenticated users to upload their own drawing
      // We use playerName in the path for simplicity, but you could use auth.uid
      allow write: if request.auth != null 
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');  // Only images
      
      // Allow any authenticated user to read drawings (so Unity can display them)
      allow read: if request.auth != null;
    }
    
    // Also allow .png files (for backwards compatibility)
    match /drawings/{roomCode}/{playerName}.png {
      allow write: if request.auth != null 
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
      allow read: if request.auth != null;
    }
    
    // Fallback: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

